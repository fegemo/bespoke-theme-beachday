$regular-title-color-dark = #ffffff
$inline-code-bg-color-dark = #444 
$inline-emphatic-code-bg-color-dark = #c1bfbf
$block-code-bg-color-dark = #23241f
$block-code-text-color-dark = #f8f8f2
