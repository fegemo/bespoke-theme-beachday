// font families
$font-family-serif = 'Amatic SC', cursive
$font-family-sans = 'Source Code Pro', monospace

// layout
$slide-height = 600px
$slide-width = $slide-height * (16/9)
$root-font-size = 24px

// colors
$presentation-color = #fff
$accent-color = #00fdc8
$alternate-color = #7b9c02
