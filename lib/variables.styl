$inline-code-bg-color = #ddd
$inline-emphatic-code-bg-color = #ddd
$block-code-bg-color = #fafafa
$block-code-text-color = #383a42
$shadow-color = #0003
$accent-more-color = darken($accent-color, 62%)
$circling-ballons-bg = #ffd700
$note-icon-bg = #fff
$note-info-bg-color-start = #ffffe0
$note-info-bg-color-end = #a9dbe0
