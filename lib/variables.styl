$did-you-know-accent-color = #800080
$table-border-color = #000
$table-head-bg = #333
$table-foot-bg = #ddd
$table-row-border-color = #ccc
$table-row-bg-even = #eaeaeab3
$table-head-color = #fff
$table-foot-color = #000
$quote-bg = whitesmoke
$quote-color = #383838
