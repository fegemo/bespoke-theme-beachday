  --quote-color: $quote-color
  --quote-border-color: $quote-border-color
  --quote-quotes-color: $quote-quotes-color
  --quote-cite-color: $quote-cite-color
  --figcaption-bg: $figcaption-bg
  --emphatic-accent-color: $emphatic-accent-color
  --button-color: $button-color

  // slide transitions
  --transition-duration: 400ms
  --transition-easing: ease
  
  // elements configuration
  --definition-list-width: 10em
  --definition-list-spacing: 0.5em

  // states
  --show-2-slides-rotation: 25deg
  --show-2-slides-z-distance: -750px
  --show-2-slides-x-distance: 380px

  // layouts
  --layout-column-gap: 1em


