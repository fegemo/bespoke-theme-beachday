:root
  // slide config
  --slide-width: $slide-width
  --slide-height: $slide-height
  
  // colors
  --presentation-color: $presentation-color
  --accent-color: $accent-color
  --alternate-color: $alternate-color
  --emphatic-color: $emphatic-color
  --link-color: $link-color
  --text-color: $text-color
  --big-title-color: $big-title-color
  --regular-title-color: $regular-title-color
  --inline-code-bg-color: $inline-code-bg-color 
  --inline-emphatic-code-bg-color: $inline-emphatic-code-bg-color 
  --block-code-bg-color: $block-code-bg-color
  --block-code-text-color: $block-code-text-color
  --shadow-color: $shadow-color
  --accent-more-color: $accent-more-color
  --circling-balloons-bg: $circling-ballons-bg
  --note-icon-bg: $note-icon-bg
  --note-info-bg-color-start: $note-info-bg-color-start
  --note-info-bg-color-end: $note-info-bg-color-end
