@media screen
  .bespoke-progress-parent
    position absolute
    top 0
    left 0
    right 0
    height 3px
    z-index 2

  .bespoke-progress-bar
    position absolute
    height 100%
    transition width .3s ease
    &:before
      content " "
      position absolute
      display block
      width 100%
      height 100%
      background darken($presentation-color, 35%)

  .bespoke-progress-number
    position absolute
    font-size 9px
    min-width 2em
    height 2em
    right 1rem
    top 1rem
    box-sizing content-box
    background-color #ccc9
    background-clip content-box
    color $progress-bar-color
    text-align center
    line-height 2em
    padding 0
    border 3px double #ccc9
  