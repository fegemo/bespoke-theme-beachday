$overview-slide-distance = 2000px
$overview-slide-distance-active = 2000px
$overview-slide-inactive-y-diff = 0
$overview-slide-inactive-active-y-diff = 0
$overview-space-between-slides = $overview-slide-distance / 83.333px

@media screen
  .bespoke-simple-overview
    .bespoke-slide
      position absolute
      opacity 1
      outline 4px solid silver

      &:hover
        outline-color steelblue

      &.bespoke-active
        transform translate3d(0, $overview-slide-inactive-active-y-diff, - $overview-slide-distance-active)
        outline-color steelblue
        z-index 100

      &.bespoke-after:not(.bespoke-after-1):not(.bespoke-after-2):not(.bespoke-after-3):not(.bespoke-after-4)
        transform translate3d(7*($slide-width + $overview-space-between-slides), $overview-slide-inactive-y-diff, - $overview-slide-distance)
        display none
      &.bespoke-before:not(.bespoke-before-1):not(.bespoke-before-2):not(.bespoke-before-3):not(.bespoke-before-4)
        transform translate3d(7*($slide-width + $overview-space-between-slides)*(-1), $overview-slide-inactive-y-diff, - $overview-slide-distance)
        display none

      for i in 1..4
        &.bespoke-after-{i}
          transform translate3d(i*($slide-width + $overview-space-between-slides), $overview-slide-inactive-y-diff, - $overview-slide-distance)
        &.bespoke-before-{i}
          transform translate3d(i*($slide-width + $overview-space-between-slides)*(-1), $overview-slide-inactive-y-diff, - $overview-slide-distance)
        

    &.bespoke-simple-overview-transitioning
      .bespoke-slide
        for i in 1..4
          &.bespoke-after-{i}
          &.bespoke-before-{i}
            transition-delay unit(i*100, 'ms')
    
    .bespoke-bullet-inactive
      display list-item
      opacity initial
      transform initial
