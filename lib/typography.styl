
h1
  color $regular-title-color
  font-family $font-family-serif
  font-size 3.5em

h2
  font-size 1.5em

h3
  font-size 1.25em

h4, h5, h6
  font-size 1em

h2, h3, h4, h5, h6
  font-family $font-family-sans
  color $regular-title-color

h1, h2, h3, h4, h5, h6
  font-weight normal
  margin 0 0 0.25em

p, li
  font-size 24px
  line-height 1.5em

strong
  font-weight bold
  color darken($accent-color, 30%)

article
  font-family $font-family-sans

a
  color $link-color
  text-decoration none
  &:hover
    text-decoration underline

code
  font-size .75em
  background-color #ddd
  color inherit
  border-radius 3px

pre > code
  font-size 0.83333em
  background-color inherit
  border-radius inherit
  color inherit
  code
    color black

pre
  color white
  background #333
  border-radius .15em

// for code not to exceed the slide width
pre
  max-width $slide-width - 40px

pre code span
  word-wrap break-word
  word-break break-all

h1 > code
h2 > code
h3 > code
h4 > code
h5 > code
h6 > code
  background-color inherit
  border-radius inherit

dt
  float left
  clear left
  width $definition-list-width
  overflow hidden
  text-overflow ellipsis
  white-space nowrap
  text-align right
  font-weight bold
  padding-right 1em
  position relative
dd
  margin-left ($definition-list-width + $definition-list-spacing)
dt, dd
  margin-bottom .5em
dl
  clearfix()
  &.width-40
    & > dt
      width 40%
    & > dd
      margin-left 42%
  &.width-50
    & > dt
      width 50%
    & > dd
      margin-left 52%


del
  color gray

table
  border 2px solid $table-border-color

tr
  background-color rgba(255,255,255,.7)
  &:nth-of-type(even)
    background-color rgba(191,213,200,.7)

td, th
  padding .3em .5em
  border 1px solid $table-border-color

th
  color white
  background-color #333

blockquote
  position relative
  margin 0.25em 0
  padding 0.25em 40px
  background whitesmoke
  box-shadow 4px 4px 4px silver
  line-height 1.45
  font-size 18px
  font-family Georgia, serif
  font-style italic
  color #383838
  border 1px solid silver
  &.centered
    margin-left auto
    margin-right auto
  > p
    margin 0.5em auto
  &::before
    content "\201C"
    display block
    position absolute
    left -0.25em
    top -0.25em
    font-size 80px
    color #7a7a7a
  & cite
    display block
    margin-top 5px
    font-size 75%
    color #999
    &::before
      content "\2014 \2009"

kbd
  padding .1em .6em
  font-size .8em
  border 1px solid #ccc
  font-family Consolas, Menlo, Monaco, monospace
  background-color #f7f7f7
  color #333
  box-shadow 0 4px 0 rgba(0,0,0,0.2), 0 0 0 2px #fff inset
  border-radius 3px
  display inline-block
  margin 0 .1em
  text-shadow 0 1px 0 #fff
  line-height 1.3
  white-space nowrap
  position relative
  top 0
  transition top 40ms ease-out, box-shadow 40ms ease-out
  &:hover
    top 4px
    box-shadow 0 0 0 rgba(0,0,0,0.2), 0 0 0 2px #fff inset

figcaption
  background-color whitesmoke
  padding 5px
  margin-bottom 3px

figure.embedded-caption
  position relative
  p
    margin 0
  figcaption
    position absolute
    background-color rgba(black, .25)
    &.caption-bottom
      bottom 1em
    &.caption-top
      top 1em
    &.caption-top
    &.caption-bottom
      left 0
      right 0
